
@{
    var ideas = ViewBag.Ideas as List<WinSite.Models.Idea>;
    ViewBag.Title = "Ideas";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}




<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Idea Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            
            margin: 0;
            padding: 0;
        }
        .card-title {
            color: #088BCF;
        }
        .idea-image {
            width: 100%;
            max-height: 300px;
            object-fit: cover;
        }

        .idea-details {
            padding-left:150px;
        }

        .join-button {
            margin-top: 20px;
        }
    </style>
</head>

<body>
    @foreach (var idea in ideas)
    {
    <div class="col-md-12">
        <div class="card dark-mode">
            <div class="card-body">
                <h5 class="card-title">@idea.IdeaTitle</h5>
                <h5 class="card-title pt-2">@idea.IdeaDescription</h5>
                <h5 class="card-title pt-2">@idea.TeamName</h5>
            </div>
        </div>
    </div>
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>



