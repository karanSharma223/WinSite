@model List<WinSite.ViewModels.HomeIdeaViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .hackathon-container {
            background-color: #1E2556;
            color: #fff;
            padding-left: 20px;
            border-radius: 5px;
        }

        .hackathon-title {
            font-size: 40px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .date-icon {
            margin-right: 10px;
        }

        
    </style>
</head>
<body>

    <div class="container mb-2 " style="margin-top:6rem">
        <div class="card hackathon-container py-5 px-2">
            <div class="row">
                <div class="col-md-6">
                    <div class="card-body">
                        <h1 class="card-title hackathon-title">Hackathon Name Here</h1>
                        <p class="card-text">
                            <i class="fas fa-calendar-alt date-icon"></i> Start Date: February 20, 2024
                        </p>
                        <p class="card-text">
                            <i class="fas fa-calendar-alt date-icon"></i> End Date: February 25, 2024
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                    <img src="~/Images/29914915.jpg" class="img-fluid rounded-3" alt="Image">
                </div>
            </div>
        </div>
    </div>
    
    <div class="d-flex justify-content-center" style="margin-top:4rem">
        <h1 class="fw-medium display-5 dark-text" style="color: #1E2556">Explore Ideas <i class="bi bi-search"></i></i></h1>
    </div>
    @foreach (var idea in Model)
    {
    <div class="d-flex justify-content-center mt-5">
        <div class="card flex-column" style="width: 60rem;">
            
            <div class="card">
                <h5 class="card-header text-white" style="background-color: #088BCF"><i class="bi bi-person"></i><span class="fw-medium text-light">Idea Creator : </span>  @idea.TeamLeader </h5>
                <h6 class="card-header"><span class="fw-medium text-muted">Team Name : </span> @idea.TeamName</h6>
                <div class="card-body">
                    <h5 class="card-title">@idea.IdeaTitle</h5>
                    <p class="card-text">@idea.IdeaDescription</p>
                    <a href="/Account/Login" class="btn btn-primary" style="background-color: #31AB46;">Join team</a>
                </div>
            </div>
        </div>
    </div>
    }
</body>


